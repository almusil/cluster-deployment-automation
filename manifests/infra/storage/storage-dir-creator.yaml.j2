apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: storage-dir-creator
  namespace: kube-system
spec:
  selector:
    matchLabels:
      app: storage-dir-creator
  template:
    metadata:
      labels:
        app: storage-dir-creator
    spec:
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
{% for affinity_rule in node_affinity %}
              - key: {{ affinity_rule['key'] }}
                operator: {{ affinity_rule['operator'] }}
{% if affinity_rule['values'] is defined %}
                values: {{ affinity_rule['values'] | tojson }}
{% endif %}
{% endfor %}
      tolerations:
      - operator: Exists
      containers:
      - name: storage-dir-creator
        image: registry.redhat.io/ubi8/ubi-minimal:latest
        command:
        - /bin/sh
        - -c
        - |
          mkdir -p /host{{ storage_path }}
          chmod 755 /host{{ storage_path }}
          chown {{ storage_uid }}:{{ storage_gid }} /host{{ storage_path }}
          echo "Storage directory created at /host{{ storage_path }} with ownership {{ storage_uid }}:{{ storage_gid }}"
          sleep 30
          echo "Task completed, exiting..."
        securityContext:
          privileged: true
        volumeMounts:
        - name: host-root
          mountPath: /host
      volumes:
      - name: host-root
        hostPath:
          path: /
      hostNetwork: true
      hostPID: true 